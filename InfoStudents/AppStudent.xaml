<Window x:Class="InfoStudentsWPF.AppStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoStudentsWPF"
        mc:Ignorable="d"
        Title="AppStudent" MinHeight="350" MinWidth="400" Height="350" Width="400" FontWeight="Bold" Background="#FF9797FD">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Height="40" Width="160" Content="Консольное приложение" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 15 20" Click="Button_ClickConsol"/>
        <Button Grid.Column="1" Height="40" Width="160" Content="Приложение WPF" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15 0 0 20" Click="Button_ClickWPF"/>
        <Button Grid.Row="1" Grid.ColumnSpan="2" Height="40" Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Выход из приложения" Click="Button_ClickEsc"/>
    </Grid>
</Window>
